{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next", "../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["apps/propnex-frontend/tsconfig(.*)?.json"],
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "JSX": true
  },
  "settings": {
    "next": {
      "rootDir": ["."]
    }
  },
  "rules": {
    "@next/next/no-html-link-for-pages": "off"
  }
}
